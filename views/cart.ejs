<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-language" content="es">
    <title>
        Carrito
    </title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <% include ./Shared/Heads %>
</head>

<body>
    <!-- HEADER -->
    <% include ./Shared/Header %>
        <!-- /HEADER -->

        <!-- NAVIGATION -->
        <% include ./Shared/Navbar %>
            <!-- /NAVIGATION -->




            <!-- SECTION -->
            <div class="section">
                <!-- container -->
                <div class="container">
                    <!-- row -->
                    <div class="row">
                        <div class="col-md-12" id="basket" style="padding-bottom: 15%">
                            <div class="col-md-3">
                                <div class="panel panel-default sidebar-menu">
                                    <div class="panel-heading text-center">
                                        <h3 class="panel-title">Mi panel</h3>
                                    </div>
                                    <div class="panel-body">
                                        <ul class="nav nav-pills nav-stacked">
                                            <li>
                                                <a href="/panelUsuario">
                                                    <i class="fa fa-list"></i> Descargas</a>
                                            </li>
                                            <li>
                                                <a href="/RecuperarCarro">
                                                    <i class="fa fa-shopping-cart"></i> Carrito</a>
                                            </li>
                                            <li>
                                                <a href="/logout">
                                                    <i class="fa fa-sign-out"></i> Cerrar Sesi√≥n</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-1"></div>

                            <div class="col-md-8" id="customer-orders">
                                <div class="box">
                                    <div class="text-center">
                                        <h2 class="title">Carrito</h2>
                                    </div>
                                    <hr>

                                    <form method="post" action="">
                                        <% if (carrito.length == 0){ %>
                                            <p>No tienes productos agregados al carrito</p>
                                            <% }else{ %>
                                                <% var productos = []; var precios = []; %>
                                                    <div class="table-responsive" style="padding-bottom: 2%">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th colspan="3">Producto</th>
                                                                    <th>Precio</th>
                                                                    <th>Cantidad</th>
                                                                    <th>Total</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% for (var i = 0; i < carrito.length; i++) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <img src="./imagesProductos/<%= carrito[i].imagen %>" height="60" width="auto" alt="Foto-NO-Disponible">
                                                                        </td>
                                                                        <td>
                                                                            <%= carrito[i].producto %>
                                                                        </td>
                                                                        <td></td>
                                                                        <td>$
                                                                            <%= carrito[i].precio %>
                                                                        </td>
                                                                        <td>1</td>
                                                                        <td>$
                                                                            <%= carrito[i].precio %>
                                                                        </td>
                                                                        <td>
                                                                            <a class="delete btn btn-sm btn-danger" href="/QuitarDelCarro/<%= carrito[i].productoId %>">
                                                                                <i class="icons-office-52">Quitar</i>
                                                                            </a>
                                                                        </td>
                                                                    </tr>
                                                                    <% productos.concat(carrito[i].producto); %>
                                                                        <% precios.concat(carrito[i].precio); %>
                                                                            <% } %>
                                                            </tbody>
                                                            <tfoot>
                                                                <tr>
                                                                    <th colspan="5">Total</th>
                                                                    <th colspan="2">$
                                                                        <%= resTotal[0].total %>
                                                                    </th>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                    <!-- /.table-responsive -->

                                                    <div class="box-footer">
                                                        <div class="pull-left">
                                                            <a href="/Productos" class="btn btn-default">
                                                                <i class="fa fa-chevron-left"></i> Continuar Comprando</a>
                                                        </div>
                                                        <div class="pull-right">
                                                            <a href="/pay/<%= carrito[0].cart %>/<%= resTotal[0].total %>" class="btn btn-default">
                                                                <i class="fa fa-chevron-right"></i> Pagar</a>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box -->

                </div>
            </div>

                    <!-- FOOTER -->
                    <% include ./Shared/Footer %>
                        <!-- /FOOTER -->
</body>

</html>