<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-language" content="es">
    <title>
        <%= title %>
    </title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/nouislider.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick-theme.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

    <script type="text/javascripts" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascripts" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascripts" src="/javascripts/slick.min.js"></script>
    <script type="text/javascripts" src="/javascripts/nouislider.min.js"></script>
    <script type="text/javascripts" src="/javascripts/jquery.zoom.min.js"></script>
    <script type="text/javascripts" src="/javascripts/main.js"></script>

</head>

<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li>
                        <a href="#">
                            <i class="fa fa-phone"></i> +52 (999-355-878)</a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-envelope-o"></i> electronicshop@hotmail.com</a>
                    </li>
                    <li>
                        <a href="https://goo.gl/maps/pr1mT8TZNSA2" target="_blank">
                            <i class="fa fa-map-marker"></i>Calle 115 No. 404 por Calle 50, Santa Rosa, 97279 Mérida, Yuc.</a>
                    </li>
                </ul>
                <ul class="header-links pull-right">
                    <li style="color:#FFFFFF;">
                        <i class="fa fa-dollar"></i>MXN</li>
                    <li>
                        <a href="/login">
                            <i class="fa fa-user-o"></i>Login</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->

        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <!--<img src="./img/logo.png" alt="">-->
                                <img src="http://drive.google.com/uc?export=view&id=1CDb83RAVBNMoCXZ4Dpb-tiT3-wRnT0bk" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->

                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <!--<div class="header-search">
                                <form>
                                    <select class="input-select">
                                        <option value="0">Categorías</option>
                                        <option value="1">Categoría 01</option>
                                        <option value="1">Categoría 02</option>
                                    </select>
                                    <input class="input" placeholder="Buscar">
                                    <button class="search-btn">Buscar</button>
                                </form>
                            </div>-->
                    </div>
                    <!-- /SEARCH BAR -->

                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Cart -->
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="/RecuperarCarro" data-toggle="dropdown" aria-expanded="true">
                                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="paypal">
                                        <input type="hidden" name="cmd" value="_cart" />
                                        <input type="hidden" name="display" value="1">
                                        <input type="hidden" name="business" value="electroshop@hotmail.com" />
                                        <input type="hidden" name="shopping_url" value="https://electtroshop.herokuapp.com/productos" />

                                        <!--<input type="submit" value="Carrito de Compras" class="btn btn-primary navbar-btn" name="submit" alt="Make payments with PayPal - it's fast, free and secure!" />-->
                                    </form>
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Tú carrito</span>
                                </a>
                            </div>
                            <!-- /Cart -->

                            <!-- Menu Toogle --
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- /HEADER -->

    <!-- NAVIGATION -->
    <% include ./Shared/Navbar %>
        <!-- /NAVIGATION -->



        <!-- SECTION -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12" style="padding-bottom: 15%">
                        <!--DETALLE PRODUCTO-->
                        <div class="row" id="productMain" style="padding-top:40px">
                            <% for( var i = 0; i < documentos.length; i++) { %>
                                <div class="col-sm-3">
                                    <div id="mainImage">
                                        <center>
                                            <img src="/imagesProductos/<%= documentos[i].imagen %>" alt="Foto-NO-Disponible" class="img-responsive thumbnail" style="height: 385px;">
                                        </center>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <div class="panel panel-default sidebar-menu">
                                        <div class="panel-heading text-center">
                                            <h3><%= documentos[i].titulo %></h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="product-body" id="details">
                                                <p>
                                                    <h4>Detalles del producto</h4>
                                                    <p>
                                                        <%= documentos[i].descripcion %>
                                                    </p>
                                                    <h4>Autor</h4>
                                                    <p>
                                                        <%= documentos[i].autor %>
                                                    </p>
                                                    <h4>Tecnología</h4>
                                                    <p>
                                                        <%= documentos[i].tecnologia %>
                                                    </p>
                                                    <hr>
                                                    <h4>Precio</h4>
                                                    <p class="product-price">$
                                                        <%= documentos[i].precio %>
                                                    </p>
                                                    <p>
                                                        <h5>Existencia:
                                                            <%= documentos[i].existencia %>
                                                        </h5>
                                                    </p>
                                                    <hr>
                                                    <% if ( documentos[i].existencia > 0 ) { %>
                                                        <p class="text-center buttons">
                                                            <a href="/AgregarAlCarro/<%= documentos[i].ID %>" class="btn btn-primary btn-lg">
                                                                <i class="fa fa-shopping-cart"></i> Agregar</a>
                                                        </p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <!--END DETALLE PRODUCTO-->

                        <!--COMMENTS PRODUCTO-->
                        <div class="box">
                            <!-- /#comments -->
                            <div id="comment-form" data-animate="fadeInUp" style="padding-bottom: 3%">
                                <h4>Deja un comentario</h4>
                                <form action="/enviarComentario/<%= documentos[0].ID %>" method="post">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="comment">Comentario
                                                    <span class="required">*</span>
                                                </label>
                                                <textarea class="form-control" id="comment" name="comment" rows="4"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 text-right">
                                            <button class="btn btn-primary">
                                                <i class="fa fa-comment-o"></i> Enviar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /#comment-form -->
                            <div id="comments" data-animate="fadeInUp">
                                <div class="panel panel-default sidebar-menu">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">
                                            <%= comentarios.length %> Comentario(s)</h3>
                                    </div>
                                    <div class="panel-body">
                                        <% for (var i = 0; i < comentarios.length; i++) { %>
                                            <div class="row comment">
                                                <div class="col-sm-9 col-md-10" lang="fr">
                                                    <h5>
                                                        <%= comentarios[i].user %>
                                                    </h5>
                                                    <p class="posted">
                                                        <i class="fa fa-clock-o"></i>
                                                        <%= comentarios[i].fecha %>
                                                    </p>
                                                    <p>
                                                        <%= comentarios[i].comentario %>
                                                    </p>
                                                    </p>
                                                </div>
                                                <hr>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--COMMENTS PRODUCTO-->
                    </div>
                </div>
            </div>
        </div>
        <!-- FOOTER -->
        <% include ./Shared/Footer %>
            <!-- /FOOTER -->
</body>

</html>